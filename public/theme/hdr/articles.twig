{% extends 'partials/_master.twig' %}
{% block main %}
    <header>
        <div class="uk-container">
            <div class="header-substrate"></div>
            <div class="breadcrumb uk-flex uk-flex-center">
                <ul class="uk-breadcrumb">
                    <li><a href="{{path('homepage')}}">Главная</a></li>
                    <li>Статьи</li>
                </ul>
            </div>
            <h1 class="pagetitle">Статьи</h1>
            <div></div>
        </div>
    </header>
    <main class="articles-content">
        <div class="uk-container">
            <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-text-center uk-text-left@s" uk-grid>
                {% for article in articles %}
                    <div>
                        <article class="readmore-item">
                            <div class="readmore-item__image">
                                <a href="{{ article.link }}">
                                    <img src="{{ thumbnail(article.image, 260, "") }}" alt="">
                                </a>
                            </div>
                            <time class="readmore-item__date">
                                {{record.published_at|date("d.m.Y") }}
                            </time>
                            <div class="readmore-item__title">
                                <a href="{{ article.link }}">{{ article.title }}</a>
                            </div>
                        </article>
                    </div>
                {% endfor %}   
            </div>
        </div>
    </main>
{% endblock main %}